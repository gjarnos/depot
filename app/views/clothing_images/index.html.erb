<h1>Listing clothing images</h1>

<table>
<% @clothing_images.each do |clothing_image| %>
<th>Shirt Front</th>

  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    
    <td class="list_image_name">
      <dl>
        <dt><%= clothing_image.image_name %></dt>
      </dl>
    </td>
  
    <td class="list_actions">
      <%= link_to 'Show', clothing_image %><br/>
      <%= link_to 'Edit', edit_clothing_image_path(clothing_image) %><br/>
      <%= link_to 'Destroy', clothing_image, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New clothing image', new_clothing_image_path %>