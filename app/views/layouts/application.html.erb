
<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
  <title>The Labarum</title>
  <%= stylesheet_link_tag    "application", media: "all",
    "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://js.stripe.com/v2/", "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed|Oswald' rel='stylesheet' type='text/css'>
</head>
<!-- END:head -->
<body class="<%= controller.controller_name %>">
<div id="wrapper">
  <div id="banner">
    <%= image_tag("labarumbannercolored.jpg") %>
    <!--<%= @page_title || "The Labarum" %>-->
  </div>
  
  <div id="columns">
    <div id="side">
      <div id="logo">
        <%= image_tag("labarumlogofrontpage.jpg") %>
      </div>
      <ul>
        <li><%= link_to 'SIGN UP', new_user_path %></li>
        <li><%= link_to 'STORE', store_url %></li>
        <li><a href="http://www..../news">FILMS</a></li>
        <li><a href="http://www..../news">COLLECTION</a></li>
        <li><a href="http://www....">ABOUT</a></li>
        <li><%= link_to 'HOME', root_path %></li>
      </ul>

      <% if session[:user_id] %>
        <ul>
          <li><%= link_to 'ORDERS',   orders_path   %></li>
          <li><%= link_to 'PRODUCTS', products_path %></li>
          <li><%= link_to 'USERS',    users_path    %></li>
        </ul>
        <%= button_to 'Logout', logout_path, method: :delete   %>
      <% end %>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</div>
<!-- START:hidden_div -->
  <% if @cart %>
    <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
    
      <%= render @cart %>
    <% end %>
  <% end %>
<!-- END:hidden_div -->
<div id="footer">
  <p>LABARUM LLC. | 2014</p>
</div>
</body>
</html>
