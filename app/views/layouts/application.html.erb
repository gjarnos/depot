
<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
  <title>The Labarum</title>
  <%= stylesheet_link_tag    "application", media: "all",
    "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed|Oswald' rel='stylesheet' type='text/css'>
</head>
<!-- END:head -->
<body class="<%= controller.controller_name %>">
<div id="wrapper">
  <div id="banner">
    <%= image_tag("bridgebanner.jpg") %>
    <!--<%= @page_title || "The Labarum" %>-->
  </div>
  
  <div id="columns">
    <div id="side">
      <!-- START:hidden_div -->
      
    <!-- END:hidden_div -->

      <ul>
        <li><a href="http://www..../contact">CONTACT</a></li>
        <li><a href="http://www..../news">SHOP</a></li>
        <li><a href="http://www..../news">BLOG</a></li>
        <li><a href="http://www..../news">COLLECTION</a></li>
        <li><a href="http://www....">LABARUM</a></li>
        <li><a href="http://www....">HOME</a></li>
      </ul>

      <% if session[:user_id] %>
        <ul>
          <li><%= link_to 'Orders',   orders_path   %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Users',    users_path    %></li>
        </ul>
        <%= button_to 'Logout', logout_path, method: :delete   %>
      <% end %>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</div>
<div id="cart">
  <% if @cart %>
    <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
      <%= render @cart %>
    <% end %>
  <% end %>
</div>
</body>
</html>
