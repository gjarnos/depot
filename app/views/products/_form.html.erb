<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :image_url2 %><br>
    <%= f.text_field :image_url2 %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </div>
  


<%= f.fields_for :categorizations do |cat| %>
    <div class="field">
      <%= cat.label :quantity, "Quantity" %><br>
      <%= cat.text_field :quantity  %>
      <%= cat.collection_select :clothing_size_id, ClothingSize.all, :id, :sizes, {prompt: "Size"} %>
    </div>

  <% end %>



  <%= f.submit 'Save Product'%>

<% end %>
